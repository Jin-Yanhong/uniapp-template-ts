{
	"extends": "@vue/tsconfig/tsconfig.json",
	"compilerOptions": {
		"ignoreDeprecations": "5.0",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"@dcloudio/types",
			"@types/uni-app",
		]
	},
	"references": [],
	"include": [
		"src/modules/*.d.ts",
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules",
		"unpackage",
		"src/**/*.nvue"
	]
}